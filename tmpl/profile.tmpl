{{define "title"}}{{.User.Name}}{{end}}
{{define "content"}}
{{$c := .C}}
	{{if .User.Chef}}
	<p>CHEF IMAGE</p>
	{{end}}
	
	Username: {{.User.Name}} <br />
	{{if .User.Chef}}
		Title: {{.User.Title}}<br />
	{{end}}
	Tagline: {{.User.Tagline}} <br />
	
	{{/* EXTRA CHEF STUFF */}}
	
	{{if .User.Chef}}
		<ul>
			{{range .User.RestaurantIds}}
			<li>{{.}}</li>
			{{end}}
		</ul>
	
		<br />
		
		<strong>Likes</strong><br />
		
		<form action="/like">
			<label for="like">Like?</label>
			<input type="checkbox" name="like" value="yes">
			<input type="submit" name="submit" value="Like">		
		</form>
		<br />
		
		<strong>Comments</strong><br />
	
		<ul>
		{{range .Comments}}
			{{$name := Username $c .FromID}}
			<li>
				{{.Comment}} -- {{if $name}}<a href="/profile?id={{.FromID}}">{{$name}}</a> {{else}}Anonymous{{end}}
			</li>
		{{end}}
		</ul>
	
		{{if .LoginInfo.User}}
		<form action="/comment" method="post">
		
			<input type="hidden" name="id" value="{{.ID}}" />
		
			<label for="comment">Comment</label>
			<textarea name="comment"></textarea>
			
			<label for="like">Also like?</label>
			<input type="checkbox" name="like" value="yes">
		
			<input type="submit" name="add_comment" value="Add Comment" />
		
		</form>
		{{end}}
	{{end}}
{{end}}