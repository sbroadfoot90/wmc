{{define "title"}}{{.User.Name}}{{end}}
{{define "content"}}
{{$c := .C}}
	{{if .User.Chef}}
	<p>CHEF IMAGE</p>
	{{end}}
	Username: {{.User.Name}} <br />
	Tagline: {{.User.Tagline}} <br />
	
	{{if .User.Chef}}
	<ul>
	{{range .User.RestaurantIds}}
		<li>{{.}}</li>
	{{end}}
	</ul>
	
	<br /><br />
	<strong>Comments</strong><br />
	
	<ul>
	{{range .Comments}}
		{{$name := Username $c .FromID}}
		<li>
			{{.Comment}} -- {{if $name}}<a href="/profile?id={{.FromID}}">{{$name}}</a>{{else}}Anonymous{{end}}
		</li>
	{{end}}
	</ul>
	
	{{if .LoginInfo.User}}
	<form action="/comment" method="post">
		
		<input type="hidden" name="id" value="{{.ID}}" />
		
		<label for="comment">Comment</label>
		<textarea name="comment"></textarea>
		
		<input type="submit" name="add_comment" value="Add Comment" />
		
	</form>
	{{end}}
	{{end}}
{{end}}