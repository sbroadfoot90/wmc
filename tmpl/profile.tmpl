{{define "title"}}{{.Profile.Name}}{{end}}

{{define "content"}}

{{$c := .C}}
<div class="wrapper search_box" style="display: none">
	<div class="search_contain">
		<form action="#" method="get">
			<input type="text" name="search" class="search_input" placeholder="Search by Name or Restaurant..."/>
			<input type="image" name="submit" src="img/magnifying.png" class="search_go" value="Go"/>
		</form>
		<ul>
			<li><a href="/top10">Top 10 Statistics</a></li>
			<li><a href="/all">All Users</a></li>
		</ul>
	</div>
</div>

<div class="wrapper content">
	<div class="profile_info">
		<div class="prof_contain">
			{{if .Profile.ProfilePicture}}
			<a href="/serve?blobKey={{.Profile.ProfilePicture}}"><img src="/serve?blobKey={{.Profile.ProfilePicture}}" style="height: 100px;"/></a>
			{{else}}
			<img src="jamie.png" style="height: 100px;"/>
			{{end}}
			<ul>
				<li><h2>{{.Profile.Name}}</h2></li>
				{{if .Profile.Chef}}
				<li>{{.Profile.Title}}</li>
				{{end}}
				<li>{{.Profile.Tagline}}</li>
				<li>{RESTAURANT} {RESTAURANT ADDRESS}</li>
			</ul>
		</div>
	</div>
	{{if .Profile.Chef}}
	<div class="likes_shares">
		{{if .AlreadyLiked}}
			<span class="like_button_disabled">{{.Profile.Likes}}</span>
		{{else}}
			<a href="#" class="like_button">{{.Profile.Likes}}</a>
		{{end}}
		<div class="share_profile">
			Share: FB, Twitter, G+
		</div>
	</div>
	<div class="comment_list">
		{{range .Comments}}
			{{$name := Username $c .FromID}}
		<div class="comment">
			{{.Comment}} <br />
		- {{if $name}}<a href="/profile?id={{.FromID}}">{{$name}}</a> {{else}}Anonymous{{end}}, {FORMATTED DATE}
		</div>
		{{end}}
	</div>
	{{end}}
</div>










	{{if .Profile.Chef}}
		<ul>
			{{range .Profile.RestaurantIds}}
			<li>{{.}}</li>
			{{end}}
		</ul>
	
		<br />

		<strong>{{.Profile.Likes}} Likes</strong><br />
		
		<form action="/like" method="post">
			<input type="hidden" name="id" value="{{.ID}}" />
			{{if .AlreadyLiked}}
			<input type="submit" name="submit" value="Like" disabled />
			{{else}}
			<input type="submit" name="submit" value="Like" />
			{{end}}	
		</form>
		<br />
		
		<strong>Comments</strong><br />
	
		<ul>
		{{range .Comments}}
			{{$name := Username $c .FromID}}
			<li>
				{{.Comment}} -- {{if $name}}<a href="/profile?id={{.FromID}}">{{$name}}</a> {{else}}Anonymous{{end}}
			</li>
		{{end}}
		</ul>
	
		{{if .LoginInfo.User}}
		<form action="/comment" method="post">
		
			<input type="hidden" name="id" value="{{.ID}}" />
		
			<label for="comment">Comment</label>
			<textarea name="comment"></textarea>
			{{if not .AlreadyLiked}}
			<label for="like">Also like?</label>
			<input type="checkbox" name="like" value="yes">
			{{end}}
			<input type="submit" name="add_comment" value="Add Comment" />
		
		</form>
		{{end}}
	{{end}}
{{end}}