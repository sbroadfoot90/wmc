{{define "title"}}Editing Restaurant{{end}}
{{define "content"}}

{{if .Restaurant}}
<form action="/editRestaurant" method="post">
	<input type="hidden" name="rid" value="{{.RID}}" />
	
	<label for="Name">Restaurant Name:</label>
	<input type="text" name="Name" value={{.Restaurant.Name}} /><br />
	
	<label for="Address">Address:</label>
	<input type="text" name="Address" value={{.Restaurant.Address}} /><br />
	
	<input type="submit" value="Edit Restaurant">
</form>
{{else}}
<form action="/editRestaurant" method="post">
	<input type="hidden" name="new" value="yes" />
	
	<label for="rid">Unique restaurant name:</label>
	<input type="text" name="rid" /><br />
	
	<label for="Name">Restaurant Name:</label>
	<input type="text" name="Name" /><br />
	
	<label for="Address">Address:</label>
	<input type="text" name="Address" /><br />
	
	<input type="submit" value="Add Restaurant">
</form>
{{end}}
{{end}}
